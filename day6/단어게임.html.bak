<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>단어게임</title>
	<style>
		#wrapper{
		width:450px;
		height:500px;
		border:2px solid red;
		margin:auto;
		}
		#wordView{
		width:100%
		height:120px;
		background:#ccffff;
		font-size:50pt;
		text-align:center;
		}
		#word_input{
		width:99%;
		height:90px;
		background:yellow;
		font-size:40pt;
		}
		#feedback{
		width:100%;
		height:200px;
		font-size:120pt;
		text-align:center;
		color:red;
		font-weight:bold;
		}
		#score{
		width:100%;
		height:70px;
		font-size:50pt;
		text-align:center;
		}
	</style>
	<script>
	var count=0; // 배열의 몇번째를 보여줄지 결정하는 전역변수!!
	var jumsu=0; //누적될 점수!!
	var word=new Array(); //크기를 정하지 않은 배열공간 선언
	word[0]="듀로탄";
	word[1]="오그림";
	word[2]="그롬마쉬";
	word[3]="볼진";
	word[4]="스랄";
	word[5]="바리안";
	word[6]="일리단";
	//게임 가동과동시에초기에 하고싶은 작업...
		function init(){
			//게임에 사용할 단어를 메모리에 확보해놓자!!
			var wordView=document.getElementById("wordView");
			wordView.innerText=word[count];

			//커서를 올려놓자!!
			var word_input=document.getElementById("word_input");
			word_input.focus(); //커서올려놓는 기능의 함수를 호출~~!
		}
		//키보드를 눌렀다 땔때, 아래의 함수 호출함!!
		function enter(){
			var key=event.keyCode; //사용자가 입력한 키보드의 아스키값 변환
			//alerrt("당신이 입력한 키보드의아스키코드값은 "+key);
			
			if(key==13){
				//alert("키보드 눌렀어?");

				var word_input=document.getElementById("word_input");

				if(word_input.value==word[count]){
					//alert("일치합니다!");
					document.getElementById("feedback").innerText="O";

					jumsu++;
					document.getElementById("score").innerText=jumsu+"점";

				}else{
					//alert("틀립니다!");
					document.getElementById("feedback").innerText="X";
				}
				//입력한 데이터 다시 초기화
				word_input.value="";

				count++;
				document.getElementById("wordView").innerText=word[count];
				if(count>6){
					alert("끝났습니다!");
				}
			}
		}
	</script>
</head>
<body onLoad="init()">
	<div id="wrapper">
		<div id="wordView"></div>
		<input type="text" id="word_input" onKeyUp="enter()">
		<div id="feedback"></div>
		<div id="score">0점</div>
	</div>
</body>
</html>
